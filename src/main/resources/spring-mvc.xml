<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!--这个使springMVC的配置文件，只用来配置springMVC相关的-->
    <!--1.扫描:只需要扫controller-->
    <context:component-scan base-package="com.swjd.controller"/>
    <!--配置视图解析器-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <!--前缀-->
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <!--后缀-->
        <property name="suffix" value=".jsp"/>
    </bean>
    <!--3.开启注解注册springmvc的一些组件-->
    <mvc:annotation-driven/>
    <!--放行静态资源-->
    <mvc:default-servlet-handler/>

    <!--5.配置拦截器(有拦截器就写，没有就不写)-->
    <mvc:interceptors>
        <mvc:interceptor>
            <!--拦截哪些请求（/**表示所有请求）-->
            <mvc:mapping path="/**"/>
            <!--拦截器有可能额会拦截掉静态资源，所以需要放行-->
            <mvc:exclude-mapping path="/**/*.js"/>
            <!--把自定义拦截器创建出来-->
            <bean id="loginInterceptor" class="com.swjd.interceptor.LoginInterceptor"></bean>
        </mvc:interceptor>
    </mvc:interceptors>

</beans>